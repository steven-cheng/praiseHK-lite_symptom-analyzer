<?xml version='1.0' encoding='utf-8'?>
<widget id="hk.ust.ienv.praisehk_lite_symptom_analyzer" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>praisehk_lite_symptom_analyzer</name>
    <description>
        An application that analysis relationship between certain symptoms and pollutants.
    </description>
    <author email="stcheng@ust.hk" href="ienv.ust.hk">
        Steven Cheng
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
